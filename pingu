#!/usr/bin/env bash

source ~/.pingurc

start=$(date +%s)
command=$@
"$@"
status=$?
diff=$(echo "$(date +%s) - ${start}" | bc)
if [ "${status}" -eq 0 ]; then
    color=good
    emoji="All good! :ok_hand:"
else
    color=danger
    emoji="Exited with code ${status}... :thinking_face:"
fi

echo " 
{
    'username': 'pingu', 
    'channel': '${channel}',
    'icon_emoji': ':penguin:',
    'attachments': [
        {
            'text': 'Finished in ${diff} seconds. ${emoji} ${mention}',
            'color': '${color}',
            'footer': '$(hostname)',
            'ts': '${start}',
            'fields': [
                {
                    'title': 'Command',
                    'value': '\`${command}\`',
                    'short': false
                }
            ]
        }
    ]
}
" | tr "'" '"' | curl -Ld @- "${webhook}"
